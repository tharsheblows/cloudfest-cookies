{
  "manifest_version": 3,
  "name": "Cloudfest Cookies",
  "version": "0.1.0",
  "description": "My Chrome Extension",
  "devtools_page": "devtools/page.html",
  "action": {
    "default_icon": "icons/take-a-bite.png",
    "default_title": "Cloudfest Cookies",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/take-a-bite16.png",
    "32": "icons/take-a-bite32.png",
    "48": "icons/take-a-bite48.png",
    "128": "icons/take-a-bite128.png"
  },
  "permissions": [
    "contextMenus",
    "cookies",
    "history",
    "webRequest",
    "declarativeNetRequest",
    "tabs",
    "activeTab",
    "storage"
  ],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "getCookies.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }
  ]
}
